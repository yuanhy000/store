.products-item {
    min-height: 300rpx;
    width: 346rpx;
    border-radius: 10rpx;
    margin-right: 0;
    margin-bottom: 10rpx;
    background-color: #F5F6F5;
    text-align: center;
}

.products-image {
    margin: 30rpx auto 0 auto;
    width: 80%;
    height: 200rpx;
    border-radius: 10rpx;
}

.products-item-bottom {
    text-align: center;
    margin-bottom: 20rpx;
    color: #333;
}

.products-item-bottom .name {
    font-size: 28rpx;
}

.products-item-bottom .price {
    font-size: 24rpx;
    padding-bottom: 10rpx;
}